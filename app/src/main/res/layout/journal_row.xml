<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="journal"
            type="com.rrbofficial.journalappkotlin.JournalList" />


    </data>


    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:elevation="10dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/journal_row_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:padding="3dp"
                android:text="username"
                android:textSize="17sp" />

            <ImageButton
                android:id="@+id/journal_row_share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_share" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                app:imageUrl="imageurl"
                android:id="@+id/journal_image_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="fitXY" />


            <TextView
                android:id="@+id/journal_title_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/journal_thought_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:paddingTop="15dp"
                android:paddingEnd="15dp"
                android:text="thoughts"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/journal_timestamp_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="text"
                android:textStyle="italic" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>